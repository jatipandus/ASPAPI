
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layouts/Layout.cshtml";
}

<!-- Trigger the modal with a button -->
<button id="btnaddDiv" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">+</button>
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <form>
                <div class="modal-header">
                    <h4 class="modal-title">Add Divisi</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="hidden" class="form-control" id="Id">
                    </div>
                    <div class="form-group">
                        <label for="Name">Nama Divisi:</label>
                        <input class="form-control" id="Name" placeholder="Name Division">
                    </div>
                    <div class="form-group">
                        <label for="Name">Nama Department:</label>
                        <div class="form-group">
                            <select class="form-control" id="DepartmentOption" name="DepartmentId">Name Department</select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="UpdateBtn" type="button" onclick="Edit()" class="btn btn-success">Update</button>
                    <button id="SaveBtn" type="button" onclick="Save()" class="btn btn-success">Save</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="table-responsive m-t-40">
    <a href="@Url.Action("DivisiExcel","Divisi")" class="btn btn-primary"><span>Excel</span></a>
    <a href="@Url.Action("DivisiCSV","Divisi")" class="btn btn-primary"><span>CSV</span></a>
    <a href="@Url.Action("DivisiPDF","Divisi")" class="btn btn-primary"><span>PDF</span></a>
    <br /><br />&nbsp;
    <table id="Divisi" class="table table-bordered table-striped">
        <thead>
            <tr class="tr_header">
                <th>Name Division</th>
                <th>Name Department</th>
                <th>CreateDate</th>
                <th>UpdateDate</th>
                <th>Action</th>
            </tr>
        </thead>
    </table>
</div>
@section scripts{
    <script src="~/Scripts/DivisiScript.js"></script>

}
